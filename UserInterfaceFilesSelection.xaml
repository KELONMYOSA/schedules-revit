<Window x:Class="Schedules.UserInterfaceFilesSelection"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                   mc:Ignorable="d"
                   Topmost="True"
                   Width="300" Height="400"
                   d:DesignHeight="400" d:DesignWidth="300">

    <Grid x:Name="WindowGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Button x:Name="BtnOk" Grid.Row="2"
                Width="120"
                Height="30"
                Click="ButtonOk"
                Content=" OK "
                HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0"/>
        <Label x:Name="Label1" Content="Выберите файлы:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="15,10,0,0" Width="150" Height="35" Grid.Row="0"/>
        <ListBox x:Name="FilesBox" Grid.Row="1"
                SelectionMode="Extended" Margin="15,0,15,0"/>
    </Grid>
</Window>
